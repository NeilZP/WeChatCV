/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.box {
	padding: 30rpx;
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
  border-bottom: 1rpx solid #000;
}

.row {
  flex-basis: 100%;
  display: flex;
  justify-content: space-between;
}
.item-input{
	border-bottom: 1rpx solid #000;
}
.title{
  display: flex;
  justify-content: center;
}